{% extends '@CMS/AdminUser/roles.html.twig' %}

{% block html_head_title %}{{ 'Role edit'|trans }} / {{ parent() }}{% endblock html_head_title %}

{% block content %}

    <h4>{{ 'Role edit'|trans }}</h4>

    <form action="" {{ form_enctype(form) }} method="POST" class="form-horizontal">
        {{ form_widget(form) }}

        <div class="control-group">
            <div class="controls">
                <button type="submit" name="update" class="btn btn-success"><i class="icon-ok icon-white"></i> {{ 'Update'|trans }}</button>
                <a class="btn cmf-cancel" href="{{ path('cms_admin_user_roles') }}">{{ 'Cancel'|trans }}</a>
            </div>
        </div>
    </form>

{% endblock content %}
