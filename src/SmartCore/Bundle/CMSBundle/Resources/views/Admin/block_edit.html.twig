{% extends '@CMS/Admin/_layout.html.twig' %}

{% block html_head_title %}{{ 'Block edit'|trans }} / {{ 'Structure'|trans }} / {{ parent() }}{% endblock html_head_title %}

{% block subnav %}
    {{ knp_menu_render('CMSBundle:AdminMenu:structure', {'currentClass': 'active'})  }}
{% endblock subnav %}

{% block content %}
    {{ parent() }}

    <div class="well well-small">
        <form action="" {{ form_enctype(form) }} method="post" class="form-horizontal">
            {{ form_widget(form) }}
            <div class="control-group">
                <div class="controls">
                    <button type="submit" name="update" class="btn btn-success"><i class="icon-ok icon-white"></i> {{ 'Save'|trans }}</button>
                    <button type="submit" name="delete" class="btn btn-danger" onclick="return confirm('Вы уверены, что хотите удалить блок?')">
                        <i class="icon-trash icon-white"></i> {{ 'Delete'|trans }}
                    </button>
                    <a class="btn" href="{{ path('cms_admin_structure_block') }}"> {{ 'Cancel'|trans }}</a>
                </div>
            </div>
        </form>
    </div>

{% endblock content %}
